<?xml version="1.0"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">sokoley_quiz_question_edit.sokoley_quiz_question_edit_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">General Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save_and_continue" class="Sokoley\Quiz\Block\Adminhtml\Component\Edit\SaveAndContinueButton"/>
            <button name="save" class="Sokoley\Quiz\Block\Adminhtml\Component\Edit\SaveButton"/>
            <button name="reset" class="Sokoley\Quiz\Block\Adminhtml\Component\Edit\ResetButton"/>
            <button name="delete" class="Sokoley\Quiz\Block\Adminhtml\Component\Edit\DeleteButton"/>
            <button name="back" class="Sokoley\Quiz\Block\Adminhtml\Component\Edit\BackButton"/>
        </buttons>
        <namespace>sokoley_quiz_question_edit</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>sokoley_quiz_question_edit.sokoley_quiz_question_edit_data_source</dep>
        </deps>
    </settings>
    <dataSource name="sokoley_quiz_question_edit_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="sokoley_quiz/question/save"/>
        </settings>
        <dataProvider name="sokoley_quiz_question_edit_data_source" class="Sokoley\Quiz\Model\Question\DataProvider">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label></label>
        </settings>
        <field name="id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">question</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Id</label>
                <visible>false</visible>
                <dataScope>id</dataScope>
            </settings>
        </field>
        <field name="quiz_id" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">question</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Quiz Id</label>
                <visible>true</visible>
                <dataScope>quiz_id</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Sokoley\Quiz\Model\Config\Source\QuizList"/>
                        <caption translate="true">-- Please Select --</caption>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="title" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">question</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Title</label>
                <visible>true</visible>
                <dataScope>title</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="description" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Description</item>
                    <item name="formElement" xsi:type="string">wysiwyg</item>
                    <item name="template" xsi:type="string">ui/form/field</item>
                    <item name="source" xsi:type="string">question</item>
                    <item name="dataScope" xsi:type="string">description</item>
                    <item name="wysiwyg" xsi:type="boolean">true</item>
                    <item name="wysiwygConfigData" xsi:type="array">
                        <item name="pagebuilder_button" xsi:type="boolean">false</item>
                        <item name="is_pagebuilder_enabled" xsi:type="boolean">false</item>
                        <item name="toggle_button" xsi:type="boolean">false</item>
                        <item name="height" xsi:type="string">200px</item>
                    </item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Description</label>
                <visible>true</visible>
                <dataScope>description</dataScope>
            </settings>
        </field>
        <field name="type_view" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">question</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Type View</label>
                <visible>true</visible>
                <dataScope>type_view</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Sokoley\Quiz\Model\Config\Source\QuestionTypeViewList"/>
                        <caption translate="true">-- Please Select --</caption>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="position" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">question</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Position</label>
                <visible>true</visible>
                <dataScope>position</dataScope>
            </settings>
        </field>
        <field name="weight" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">question</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Weight</label>
                <visible>true</visible>
                <dataScope>weight</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
    </fieldset>
</form>
